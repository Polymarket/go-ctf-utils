#######################################################
############## formats, lint, and tests ###############
#######################################################

.PHONY: fmt
fmt:
	@echo "----------------------------------------------------------------"
	@echo " ⚙️  Formatting code..."
	@echo "----------------------------------------------------------------"
	gofmt -s -w ./.

.PHONY: test
test:
	@echo "----------------------------------------------------------------"
	@echo " ⚙️  Testing the code..."
	@echo "----------------------------------------------------------------"
	GOPRIVATE=${PRIVATE_REPOS} go test ./... -v
	@echo "Tests complete!"
